<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".streaming.broadcaster.ReadyBroadcastActivity">

    <EditText
        android:id="@+id/bReadyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="156dp"
        android:ems="10"
        android:hint="방제목을 입력하세요"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bReadyBtn"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="8dp"
        android:text="방송 시작!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_field" />

    <Spinner

        android:id="@+id/spinner_field"

        android:layout_width="178dp"

        android:layout_height="64dp"

        android:layout_marginStart="92dp"

        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bReadyEditText" />
</android.support.constraint.ConstraintLayout>